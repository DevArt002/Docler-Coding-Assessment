{
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "module": "commonjs",
    "paths": {
      "Components/*": ["src/components/*"],
      "Hooks/*": ["src/hooks/*"],
      "Utils/*": ["src/utils/*"],
      "Config/*": ["src/config/*"],
      "Constants/*": ["src/constants/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
